    -- $ rarely (palindrome)
    $ often (off 0.125 (|+ note "12" ))
    $ note ( notePat )
    # s "bmsy:2"
    #sus 0.4 #rel 0.4 #speed "[1,1.02]"
    |+| note (pitch)
      #lpf 2800
